<DIV class=postactions>
  	 <P align="right">
  	 	<table>
	  	 	<tr>
		  	 	<td align="left">
			     #if($karmaEnabled)
					<script type="text/javascript">writeStars(${post.karma.karmaPoints}, ${post.id});</script>&nbsp;&nbsp;
				 #end
				 #if($karmaEnabled && $post.userId != $session.userId && $logged)
						#if(!$karmaVotes.containsKey($post.id))
							<script type="text/javascript">karmaPointsCombo(${post.id})</script>&nbsp;&nbsp;
						#else
							<span class="gensmall">${I18n.getMessage("Karma.yourRate")}: ${karmaVotes.get($post.id)}</span>&nbsp;&nbsp;
						#end
				#end
		  	 	</td>
		  	 	<td align="right">
		  	 		#if($logged || $anonymousPosts) && $topic.status != 1 && !$readonly>
						<a href="javascript:activateQuickReply('${post_index}')">${I18n.getMessage("PostForm.quickReply")}</a>
					#end
				    #if($topic.status != 1 && !$readonly)
						<a href="/posts/quote/${start}/${post.id}")}" rel="nofollow" class="icon_quote">${I18n.getMessage("PostShow.refer")}</a>&nbsp;&nbsp;  
					#end
				     #if($canEditCurrentMessage)
						<a href="/jforum${extension}?module=${moduleName}&amp;action=edit&amp;post_id=${post.id}&amp;start=${start}","")}" rel="nofollow" class="icon_edit">${I18n.getMessage("PostShow.edit")}</a>&nbsp;&nbsp;  
					#end
					
			     	<SPAN title="top" class="scrolltop" onclick="scroll(0,0)">TOP</SPAN>
		     	</td>
		     </tr>
	     </table>
     </P>
</DIV>